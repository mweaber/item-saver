{{/each}}


<div class="card card-body">
    <h3>Edit Character</h3>
    <form action="/characters/{{character.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="charName">Character Name</label>
            <input type="text" class="form-control" name="charName" 
            value="{{character.charName}}" required>
        </div>
         <div class="form-group">
            <label for="charClass">Character Class</label>
            <input type="text" class="form-control" name="charClass" 
            value="{{character.charClass}}" required>
        </div>
         <div class="form-group">
            <label for="charRace">Character Race</label>
            <input type="text" class="form-control" name="charRace" 
            value="{{character.charRace}}" required>
        </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>